{
  "name": "meteor-wallet-2",
  "private": true,
  "scripts": {
    "start": "meteor run --exclude-archs web.browser.legacy,web.cordova",
    "eslint": "eslint . --fix",
    "prettier": "prettier --write \"**/*.js\"",
    "check": "npm run eslint && npm run prettier",
    "visualize": "meteor --production --extra-packages bundle-visualizer"
  },
  "dependencies": {
    "@babel/runtime": "^7.19.0",
    "@headlessui/react": "^1.7.3",
    "@heroicons/react": "^2.0.10",
    "aos": "^2.3.4",
    "autoprefixer": "^10.4.8",
    "clsx": "^1.2.1",
    "framer-motion": "^7.2.0",
    "meteor-node-stubs": "^1.2.5",
    "postcss-load-config": "^4.0.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^4.6.0",
    "react-router-dom": "^6.4.2",
    "simpl-schema": "^1.13.1",
    "tailwindcss": "^3.2.1",
    "use-debounce": "^8.0.3"
  },
  "devDependencies": {
    "@quave/eslint-config-quave": "^1.0.7",
    "prettier": "^2.7.1",
    "@tailwindcss/aspect-ratio": "^0.4.0",
    "@tailwindcss/forms": "^0.5.2",
    "@tailwindcss/typography": "^0.5.2",
    "@types/meteor": "^2.0.4",
    "@types/meteor-astronomy": "^2.6.6",
    "@types/meteor-mdg-validated-method": "^1.2.3",
    "@types/mocha": "^8.2.3",
    "@types/simpl-schema": "^1.12.2",
    "postcss": "^8.4.16"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.jsx",
      "server": "server/main.js"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "meteor npm test && lint-staged",
      "post-commit": "git update-index --again"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@quave/quave"
    ]
  }
}
